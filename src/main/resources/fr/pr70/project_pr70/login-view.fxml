<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.pr70.project_pr70.front.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@./icon/software-logo.png" />
        </image>
    </ImageView>

    <Label fx:id="userLabel" text="Username:"/>
    <TextField fx:id="userTextField"/>
    <Label fx:id="passwordLabel" text="Password:"/>
    <PasswordField fx:id="passwordTextField"/>

    <Label fx:id="invalidText" textFill="RED" />
    <Button id="button" text="Login" onAction="#onSubmitClicked"/>
    <Button id="button" text="Sigin" onAction="#handleSigin"/>
</VBox>
